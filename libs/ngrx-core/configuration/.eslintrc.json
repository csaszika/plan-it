{
    "extends": ["../../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts"],
            "extends": ["plugin:@nrwl/nx/angular", "plugin:@angular-eslint/template/process-inline-templates"],
            "parserOptions": { "project": ["libs/ngrx-core/configuration/tsconfig.*?.json"] },
            "rules": {
                "@angular-eslint/directive-selector": ["error", { "type": "attribute", "prefix": "plan-it", "style": "camelCase" }],
                "@angular-eslint/component-selector": ["error", { "type": "element", "prefix": "plan-it", "style": "kebab-case" }]
            }
        },
        { "files": ["*.html"], "extends": ["plugin:@nrwl/nx/angular-template"], "rules": {} }
    ]
}
