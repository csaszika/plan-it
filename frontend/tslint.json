{
  "extends": ["./node_modules/angular-configuration/tslint.json"],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "pi",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "pi",
      "kebab-case"
    ],
    "component-class-suffix": [true, "Component", "Container"]
  }
}
